{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es5",

    // :::: module :::: //
    "module": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,

    // :::: React :::: //
    "jsx": "react-jsx",

    // :::: JS :::: //
    "allowJs": true,
    "checkJs": false,

    // :::: Lint :::: //
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false,

    // :::: More spec :::: //
    "lib": ["dom", "dom.iterable", "esnext"],

    // :::: Sorcemap :::: //
    "sourceMap": false,

    // :::: Etc :::: //
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "isolatedModules": true,

    // :::: Detail :::: //
    "forceConsistentCasingInFileNames": false,

    // :::: Outfile :::: //
    "removeComments": true,
    "noEmit": true,

    // :::: path :::: //
    "outDir": "./dist",
    "typeRoots": ["./@types"],
    "baseUrl": "./"
  },
  "include": ["src"]
}
